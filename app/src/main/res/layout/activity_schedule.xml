<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fdfbb6"
    tools:context="com.example.mypc.myapp.Schedule">
    <TextView
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0033ce"
        android:textSize="20sp"
        android:text="Select your time:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/morning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Morning"
            android:textColor="#000"
            android:textSize="17sp"
            android:background="@drawable/text_view"
            android:padding="15dp"
            android:drawableLeft="@drawable/morning" />

        <TextView
            android:id="@+id/afternoon"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Afternoon"
            android:textSize="17sp"
            android:textColor="#000"
            android:background="@drawable/text_view"
            android:padding="15dp"
            android:drawableLeft="@drawable/afternoon" />
        <TextView
            android:id="@+id/evening"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evening"
            android:textColor="#000"
            android:textSize="17sp"
            android:background="@drawable/text_view"
            android:padding="15dp"
            android:drawableLeft="@drawable/evening"/>
        <TextView
            android:id="@+id/night"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Night"
            android:textColor="#000"
            android:textSize="17sp"
            android:background="@drawable/text_view"
            android:padding="15dp"
            android:drawableLeft="@drawable/night"/>
    </LinearLayout>
</LinearLayout>